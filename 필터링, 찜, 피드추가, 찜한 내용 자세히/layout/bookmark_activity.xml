<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookMark_J">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 첫 줄 (2개) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="204dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/bookmartpic1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/star1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/link1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="204dp">

                <ImageView
                    android:id="@+id/bookmartpic2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/star2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/link1" />
            </FrameLayout>
        </LinearLayout>

        <!-- 두 번째 줄 (2개) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="204dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/bookmartpic3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/star3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/link1" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="204dp">

                <ImageView
                    android:id="@+id/bookmartpic4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/star4"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:background="@android:color/transparent"
                    android:src="@drawable/link1" />
            </FrameLayout>
        </LinearLayout>

        <!-- 다음 버튼 -->
        <Button
            android:id="@+id/bookmarkNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음" />

        <Button
            android:id="@+id/back"
            android:onClick="goBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="임시 이전 버튼" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
