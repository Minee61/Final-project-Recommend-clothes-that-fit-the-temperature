<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookm"
    style="underline"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bookmartAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF5FD"

                android:text="전체"
                android:textColor="#000000"

                />

            <Button
                android:id="@+id/bookmartBn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF5FD"
                android:text="캐주얼"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bookmartBn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF5FD"
                android:text="빈티지"
                android:textColor="#000000" />

            <Button
                android:id="@+id/bookmartBn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FCF5FD"
                android:text="Button"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bookmartpic1"
                    android:layout_width="170dp"
                    android:layout_height="204dp"

                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"

                    android:text="   " />

                <ImageView
                    android:id="@+id/bookmartpic2"
                    android:layout_width="170dp"
                    android:layout_height="204dp"

                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="234dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bookmartpic3"
                    android:layout_width="170dp"
                    android:layout_height="204dp"

                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"

                    android:text="   " />

                <ImageView
                    android:id="@+id/bookmartpic4"
                    android:layout_width="170dp"
                    android:layout_height="204dp"

                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
